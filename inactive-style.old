body {
	font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-size: 12px;
	font-style: normal;
	font-weight: normal;
	text-shadow: none;
	text-decoration: none;
	text-transform: none;
	letter-spacing: 0;
	word-spacing: 0;
	line-height: 1.4em;
	color: #333;
	background: rgb(250,250,250);
}

a:focus {
	outline: 1px dotted
}
a:link, a:visited {
	text-decoration: none;
	color: rgb(9,174,239);
}
a:hover {
  color: rgb(0,200,254); 
}

hr {
	border: 0 #ccc solid;
	border-top-width: 1px;
	clear: both;
	height: 0
}

h1,h2,h3,h4,h5,h6 {
	font-style: normal;
	font-weight: 400;
	text-shadow: none;
	text-decoration: none;
	text-transform: none;
	letter-spacing: 0;
	word-spacing: 0;
	line-height: 1.4em
}

h1 {
	font-size: 1.4em;
	font-family: 'Oswald', 'Helvetica Neue', Helvetica, Arial, sans-serif;
	text-transform: uppercase;
}

h2 {
	font-size: 1.4em;
	font-family: 'Oswald', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  text-transform: uppercase;
  letter-spacing: .15em;
}

h3 {
	font-size: 1.6em;
}

h4 {
	font-size: 1.4em;
}

h5 {
	font-size: 1.2em
}

h6 {
	font-size: 1em;
}

ol {
	list-style: decimal
}

ul {
	list-style: disc
}

li {
	margin-left: 30px
}

p,dl,hr,h1,h2,h3,h4,h5,h6,ol,ul,pre,table,address,fieldset {
	margin-bottom: 20px
}



/* CUSTOM */


#logo {
  display: block;
  position: relative;
  color: rgb(0,0,0);
  text-align: center;
  padding: 7em 1em 1em 1em;
  background-color: rgb(240,240,240);
  width: 14em;
}
a#logo:hover {
  color: rgb(9,174,239);
}
#logo:before {
  display: block;
  position: absolute;
  top: 2em;
  left: 0;
  height: 4em;
  width: 100%;
  background: url('../img/culturegraphic-logomark.svg') no-repeat center center;
  content: ' ';
  margin-bottom: 0;
}
#logo h1, #logo h2 {
  margin: 0;
}
#logo p {
  display: block;
  text-transform: uppercase;
  font-size: .85em;
  letter-spacing: .25em;
  margin: .25em 0 .5em 0;
}



